@model CelsoMusic.Domain.Musica.Artista

@{
    ViewData["Title"] = "Artista";
}

<h1>Artista</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<h4>Albuns</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Lançamento
            </th>
            <th>
                Generos
            </th>
            <th>
                Duração
            </th>
            <th>
                Músicas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Albuns) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataLancamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoGeneros)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duracao.Formatada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoMusicas)
                </td>
                <td>
                    <a asp-controller="Album" asp-action="Details" asp-route-id="@item.ID">Detalhar</a>
                    <a asp-controller="Album" asp-action="Edit" asp-route-id="@item.ID">Alterar</a>
                    <a asp-controller="Album" asp-action="Delete" asp-route-id="@item.ID">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Alterar</a>
    <a asp-controller="Album" asp-action="Create" asp-route-id="@Model?.ID">Novo Álbum</a>
    <a asp-action="Index">Voltar</a>
</div>